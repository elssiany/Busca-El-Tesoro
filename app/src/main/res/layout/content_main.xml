<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.buscaeltesoro.MainActivity"
    android:background="@drawable/intro_app"
    tools:showIn="@layout/activity_main">


    <TextView
        android:layout_marginBottom="40dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:text="Busca El Tesoro"
        android:background="@drawable/icon_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <Button
        android:textStyle="bold"
        style="?android:attr/buttonBarButtonStyle"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Comenzar A Jugar"
        android:id="@+id/textVIniciarJuego"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp" />

    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Busca el tesoro con tus amigos y diviértete aprendiendo todo sobre el mundo de Android con  divertidas preguntas ."
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
